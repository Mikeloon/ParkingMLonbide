<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:id="@+id/ParkingFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NavFragments.ParkingFragment">


    <TextView
        android:id="@+id/fechaTextViewP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Fecha actual"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/btnAnteriorP"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:contentDescription="Day_before_btton"
        android:src="@drawable/baseline_keyboard_arrow_left_24" />

    <ImageView
        android:id="@+id/btnSiguienteP"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="Next_day_btton" />

    <LinearLayout
        android:id="@+id/LinearLayoutFechaReservaP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fechaTextViewP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/fechaCorrespondienteTextViewP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Ver disponibilidad de las plazas"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutImagenCocheP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fechaTextViewP"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgCoche"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Vector Asset"
            android:src="@drawable/baseline_directions_car_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewCocheP"
        android:layout_width="96dp"
        android:layout_height="403dp"
        android:layout_below="@+id/LinearLayoutImagenCocheP"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp" />

    <LinearLayout
        android:id="@+id/LinearLayoutImagenElectricoP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fechaTextViewP"
        android:layout_marginStart="75dp"
        android:layout_marginTop="125dp"
        android:layout_toEndOf="@+id/LinearLayoutImagenCocheP"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgElecP"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Vector Asset"
            android:src="@drawable/baseline_electric_car_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewElectricoP"
        android:layout_width="96dp"
        android:layout_height="377dp"
        android:layout_below="@+id/LinearLayoutImagenElectricoP"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_toEndOf="@+id/listViewCocheP" />

    <LinearLayout
        android:id="@+id/LinearLayoutImagenMinusvP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fechaTextViewP"
        android:layout_marginStart="75dp"
        android:layout_marginTop="125dp"
        android:layout_toEndOf="@+id/LinearLayoutImagenElectricoP"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgMinusvP"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Vector Asset"
            android:src="@drawable/baseline_accessible_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewMinusvP"
        android:layout_width="89dp"
        android:layout_height="401dp"
        android:layout_below="@+id/LinearLayoutImagenMinusvP"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_toEndOf="@+id/listViewElectricoP" />

    <LinearLayout
        android:id="@+id/LinearLayoutImagenMotoP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fechaTextViewP"
        android:layout_marginStart="65dp"
        android:layout_marginTop="125dp"
        android:layout_toEndOf="@+id/LinearLayoutImagenMinusvP"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgMotoP"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Vector Asset"
            android:src="@drawable/baseline_sports_motorsports_24" />
    </LinearLayout>

    <ListView
        android:id="@+id/listViewMotoP"
        android:layout_width="89dp"
        android:layout_height="387dp"
        android:layout_below="@+id/LinearLayoutImagenMotoP"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="70dp"
        android:layout_toEndOf="@+id/listViewMinusvP" />

</RelativeLayout>